<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:gravity="center"
    android:ignoreGravity="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    tools:context="com.majjistralapp.majjistralapp.MainActivity$PlaceholderFragment" >

        
     <View
        android:id="@+id/toparea"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentRight="true"
      
        android:layout_marginTop="135dp" />

	<View
        android:id="@+id/middletop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        
        android:layout_alignParentRight="true"
      
        android:layout_marginTop="220dp" />

    
	<View
        android:id="@+id/middlebottomarea"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        
        android:layout_marginTop="340dp"
        android:layout_alignParentRight="true" />
            
    <View
        android:id="@+id/bottomarea"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />
	
    <ImageView
        android:id="@+id/info"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/bottomarea"
        android:layout_alignLeft="@+id/bottomarea"
        android:src="@drawable/home_info" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/bottomarea"
        android:layout_alignRight="@+id/bottomarea"        
        android:src="@drawable/home_camera" />

    <ImageView
        android:id="@+id/points"
        android:layout_width="100dp"
        android:layout_height="100dp"
        
        android:layout_alignRight="@+id/help"
        android:layout_alignBottom="@+id/toparea"
        android:src="@drawable/home_points" />

    <ImageView
        android:id="@+id/games"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/toparea"
        android:layout_alignLeft="@+id/events"
        android:src="@drawable/home_games" />

    <ImageView
        android:id="@+id/walk"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/middletop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_walk" />

    <ImageView
        android:id="@+id/events"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/middletop"
        android:layout_alignTop="@+id/middlebottomarea"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/home_events" />

    <ImageView
        android:id="@+id/help"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/middletop"
        android:layout_alignTop="@+id/events"
        android:layout_marginRight="11dp"
        android:src="@drawable/home_help" />

    <ImageView
        android:id="@+id/wildlifeguide"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/walk"
        android:layout_alignLeft="@+id/points"
        android:layout_marginBottom="29dp"
        android:src="@drawable/home_wildlife" />

    <ImageView
        android:id="@+id/phototop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/walk"
        android:layout_alignTop="@+id/toparea"
        android:layout_marginRight="25dp"
        android:src="@drawable/home_photo" />

    <View
        android:id="@+id/standalonebottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/bottomarea"
        android:layout_below="@+id/middlebottomarea" />

    <TextView
        android:id="@+id/titlehome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
      
        android:text="WHAT WOULD YOU LIKE TO DO TODAY?"
        
        android:textSize="45dp"
        android:textColor="#484848"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:gravity="center"/>

    <ImageView
        android:id="@+id/photobottom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/standalonebottom"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/info"
        android:src="@drawable/home_photo" />
  
</RelativeLayout>